<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <cn.cqs.common.view.particle.ParticleView
        android:id="@+id/particleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0867AB"
        app:pv_host_text="安卓"
        app:pv_host_text_size="18sp"
        app:pv_particle_text="ANDROID"
        app:pv_particle_text_size="20sp"
        app:pv_text_anim_time="2000"
        app:pv_spread_anim_time="1000"
        app:pv_host_text_anim_time="1000"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_android"/>
</RelativeLayout>