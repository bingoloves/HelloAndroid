<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前设备分辨率"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="200dp*100dp \n toastTest"
        android:textAllCaps="false"
        android:onClick="toastTest" />
    <Button
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:text="360dp*150dp \n showFloat"
        android:textAllCaps="false"
        android:onClick="showFloat" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hideFloat"
        android:textAllCaps="false"
        android:onClick="hideFloat" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="workflow"
        android:textAllCaps="false"
        android:onClick="showWorkflow" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转Two"
        android:textAllCaps="false"
        android:onClick="navigateTwo" />
</LinearLayout>
